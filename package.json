{
  "name": "eventrix",
  "version": "2.10.2",
  "description": "A system for managing the state of the application based on the events broadcast in the application",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "types/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "github:rstgroup/eventrix"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://eventrix.js.org",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:clean": "vitest --clearCache",
    "build": "vite build",
    "coverage": "vitest run --coverage",
    "coverage:report": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "store"
  ],
  "author": "Mariusz Przoda≈Ça",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.4",
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "use-sync-external-store": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.1.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/plugin-transform-typescript": "^7.14.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.6.3",
    "@babel/traverse": "^7.7.0",
    "@eslint/js": "^9.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.15 || ^13.1.1",
    "@types/lodash": "^4.14.170",
    "@types/react": "^17.0.11 || ^18.0.0",
    "@types/use-sync-external-store": "0.0.3",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^4.0.0",
    "coveralls": "^3.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^27.5.1",
    "loader-utils": "^2.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.4.2",
    "ts-loader": "^9.2.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverage": true
  },
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "bugs": {
    "url": "https://github.com/rstgroup/eventrix/issues"
  }
}
